        <section id="order">
            <h2>Order Online</h2>
            <form id="orderForm">
                <label for="orderName">Name:</label>
                <input type="text" id="orderName" name="orderName" required />
                
                <label for="orderEmail">Email:</label>
                <input type="email" id="orderEmail" name="orderEmail" required />
                
                <label for="orderItem">Select Item:</label>
                <select id="orderItem" name="orderItem" required>
                    <option value="Espresso" data-price="25000">Espresso - Rp. 25.000</option>
                    <option value="Americano" data-price="30000">Americano - Rp. 30.000</option>
                    <option value="Cappuccino" data-price="33000">Cappuccino - Rp. 33.000</option>
                    <option value="Latte" data-price="33000">Latte - Rp. 33.000</option>
                    <option value="Mocha" data-price="35000">Mocha - Rp. 35.000</option>
                    <option value="Cold Brew" data-price="38000">Cold Brew - Rp. 38.000</option>
                    <option value="Macchiato" data-price="36000">Macchiato - Rp. 36.000</option>
                    <option value="Affogato" data-price="40000">Affogato - Rp. 40.000</option>
                </select>
                
                <label for="orderQuantity">Quantity:</label>
                <input type="number" id="orderQuantity" name="orderQuantity" min="1" required />
                
