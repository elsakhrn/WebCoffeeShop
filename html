        <script>
            document.getElementById('orderForm').addEventListener('submit', function (e) {
                e.preventDefault();
                const name = document.getElementById('orderName').value;
                const email = document.getElementById('orderEmail').value;
                const itemElement = document.getElementById('orderItem');
                const item = itemElement.options[itemElement.selectedIndex].value;
                const price = parseInt(itemElement.options[itemElement.selectedIndex].getAttribute('data-price'));
                const quantity = parseInt(document.getElementById('orderQuantity').value);
                const total = price * quantity;
                const formatRupiah = (amount) => {
                    return 'Rp. ' + amount.toLocaleString('id-ID');
                };
                const confirmationMessage = `Thank you, ${name}! Your order of ${quantity} ${item}(s) has been received. Total payment: ${formatRupiah(total)}. We will send the details to ${email}.`;
                document.getElementById('orderConfirmation').innerText = confirmationMessage;
                document.getElementById('orderForm').reset();
            });
        </script>
